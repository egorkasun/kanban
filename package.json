{
  "name": "kanban",
  "version": "0.0.1",
  "description": "доска с тремя столбцами",
  "main": "dist/index.js",
  "scripts": {
    "start": "webpack-dev-server --config webpack.dev.config.js",
    "lint": "eslint src --color --ext .ts,.tsx",
    "build": "webpack --config webpack.prod.config.js && npm run sass",
    "copyLedaStyles": "mkdirp /leda && ncp node_modules/leda/public/assets/css/themes/leda/styles.css public/leda/styles.css",
    "check": "npm run lint && npm run tsc",
    "sass": "node-sass ./src/styles/ -o ./public/styles/",
    "sass:watch": "node-sass --watch ./src/styles/ -o ./public/",
    "tsc": "tsc"
  },
  "author": "egorkasun",
  "license": "MIT",
  "dependencies": {
    "@rematch/core": "^1.4.0",
    "axios": "^0.19.1",
