    "eslint-plugin-cypress": "2.8.1",
    "eslint-plugin-import": "2.20.0",
    "eslint-plugin-jest": "23.4.0",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-react": "7.17.0",
    "eslint-plugin-react-hooks": "2.3.0",
    "html-webpack-plugin": "^3.2.0",
    "mkdirp": "0.5.1",
    "ncp": "2.0.0",
    "node-sass": "4.13.0",
    "rimraf": "3.0.0",
    "stylelint": "^13.2.0",
