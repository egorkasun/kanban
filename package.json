    "history": "4.10.1",
    "leda": "0.0.1-alpha.13",
    "lodash": "4.17.15",
    "react": "16.12.0",
    "react-dom": "16.12.0",
    "react-redux": "^7.1.3",
    "react-router-dom": "5.1.2",
    "shortid": "^2.2.15"
  },
  "devDependencies": {
    "@types/lodash": "4.14.149",
    "@types/react": "16.9.17",
    "@types/react-dom": "^16.9.5",
